{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2020",
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}